<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Category toolBar-->
    <style name="MyToolBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@android:color/white</item>
        <!-- [Monocle Tip] start: for the color of back button on header -->
        <!-- ymnc_search_button_color_dark for dark background and ymnc_search_button_color_light for light background -->
        <item name="colorControlNormal">#ffffff</item>
        <!-- [Monocle Tip] end -->
    </style>

    <!-- Base application theme. -->
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- [Monocle Tip] start -->
        <!-- [Monocle Tip] android's bug for dropdown with Toolbar causes the background of dropdown is unable to change by java code -->
        <item name="android:dropDownListViewStyle">
            @style/Widget.MonocleStyle.DropDownListViewStyle
        </item>
        <!-- [Monocle Tip] end -->
        <!-- [Monocle Tip] start: for the color of back button on header -->
        <!-- ymnc_search_button_color_dark for dark background and ymnc_search_button_color_light for light background -->
        <item name="colorControlNormal">#26282a</item>
        <!-- [Monocle Tip] end -->
    </style>

    <style name="Widget.MonocleStyle.DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="OneEcToolBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
        <!-- ymnc_search_button_color_dark for dark background and ymnc_search_button_color_light for light background -->
        <item name="colorControlNormal">#ffffff</item>
        <!-- [Monocle Tip] end -->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

	<style name="menu_inner_nav_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
