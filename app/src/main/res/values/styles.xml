<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Category toolBar-->
    <style name="MyToolBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@android:color/white</item>
        <!-- [Monocle Tip] start: for the color of back button on header -->
        <!-- ymnc_search_button_color_dark for dark background and ymnc_search_button_color_light for light background -->
        <item name="colorControlNormal">#ffffff</item>
        <!-- [Monocle Tip] end -->
    </style>


</resources>
