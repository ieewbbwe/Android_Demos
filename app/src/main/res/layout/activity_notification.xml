<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.webber.demos.notify.NotificationActivity">

    <Button
        android:id="@+id/m_send_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送简单的通知" />

    <Button
        android:id="@+id/m_send_big_image_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送大图通知" />

    <Button
        android:id="@+id/m_send_not_channel_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="没有Channel的推送" />

    <Button
        android:id="@+id/m_send_remote_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="推送RemoteView" />

</LinearLayout>
